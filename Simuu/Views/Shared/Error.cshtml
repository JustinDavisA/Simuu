@{
    string error = ViewBag.Exception?.ToString() ?? "No Error available";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <hgroup>
        <h1>Error</h1>
        <h2>An error occurred while processing your request.</h2>
        <h3>The error details are: </h3>
        @error
    </hgroup>
</body>
</html>
